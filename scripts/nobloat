clear
echo
echo "***************************************************************************"
echo "* This will remove bloatware from your ROM based on the entries created   *"
echo "* in /scripts/nobloat.txt file. Added entries to this text file must be   *"
echo "* the name of the APK file only do not include the path. Your ROM must be *"
echo "* De-Odexed prior to running this task.                                   *"
echo "***************************************************************************"
scripts/press_enter

BLOAT=../../../scripts/nobloat.txt
CSC=../../../scripts/csc.txt

if [ ! -d WORKING_* ] ; then
	echo "No working folder found, create your working folder first"
	scripts/press_enter
	exit 1
fi
if [ -e WORKING_*/system/app/*.odex ] ; then
	echo "Warning, ODEX files found, You must De-Odex your ROM first."
	scripts/press_enter
	exit 1
else
	cd WORKING_*/system/app

# - Remove bloatware based on nobloat.txt
# - only remove *.apks nothing else.

echo "Please wait...DeBloating /system/app"
while read line; do
	if [ -e $line ] ; then
		cp -fv $line ../../../removed
		sleep .1
	fi
done < $BLOAT

while read line; do
	rm -fv $line
	sleep .1
done < $BLOAT
fi

cd ../priv-app

echo "Please wait...DeBloating /system/priv-app"
while read line; do
	if [ -e $line ] ; then
		cp -fv $line ../../../removed
		sleep .1
	fi
done < $BLOAT

while read line; do
	rm -fv $line
	sleep .1
done < $BLOAT

echo "Please wait...Cleaning up /system"
cd ../etc
while read line; do
	rm -fv $line
	sleep .1
done < $CSC

fi

exit 0
